<windows:MedicalWindow
    xmlns="https://spacestation14.io"
    xmlns:windows="clr-namespace:Content.Client.UserInterface.Systems.Medical.Windows"
    xmlns:controls= "clr-namespace:Content.Client.UserInterface.Systems.Medical.Controls"
    xmlns:controls2="clr-namespace:Content.Client.UserInterface.Controls"
    Name="MedicalMenu"
    HorizontalExpand="True"
    Title="Medical Menu"
    VerticalExpand="True"
>
    <BoxContainer Orientation="Vertical">
        <controls:CommonStatusDisplay
            Name="CommonStatus"
            Access="Internal"/>
        <TabContainer Name="Tabs">
            <controls:MedicalOverviewPage
                Name="OverviewTab"
                Access="Internal"
            />
            <controls:TriagePage
                Name="TriageTab"
                Access="Internal"
            />
            <controls:SurgeryPage
                Name="SurgeryTab"
                Access="Internal"
            />
        </TabContainer>
    </BoxContainer>

</windows:MedicalWindow>
